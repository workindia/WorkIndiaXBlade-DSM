#!/usr/bin/env sh

# Source nvm if available to ensure node/npm are in PATH
if [ -s "$HOME/.nvm/nvm.sh" ]; then
  . "$HOME/.nvm/nvm.sh"
fi

# Ensure we're in the project root
# Husky runs from .git/hooks, so we need to go up 2 levels to get to project root
cd "$(git rev-parse --show-toplevel)" || exit

# Run lint-staged
npm run lint-staged
