{
  "name": "workindia-x-blade-dsm",
  "version": "0.0.0",
  "private": true,
  "description": "WorkIndia Design System Monorepo based on @razorpay/blade",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:tokens": "lerna run --scope @workindia/tokens build",
    "build:dsm": "lerna run --scope @workindia/dsm build",
    "build:app": "lerna run --scope @workindia/app build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "lerna run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:tokens": "lerna run --scope @workindia/tokens test",
    "test:dsm": "lerna run --scope @workindia/dsm test",
    "clean": "lerna run clean && rm -rf node_modules",
    "publish:all": "lerna publish",
    "publish:tokens": "lerna publish --scope @workindia/tokens",
    "publish:dsm": "lerna publish --scope @workindia/dsm",
    "setup:git-template": "./scripts/setup-git-template.sh",
    "prepare": "npm run setup:git-template || true"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.9",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.12.1"
  }
}
